{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:8080",
    "distDir": "../../web/dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "SentiricTrafficCache",
    "version": "1.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "appimage", "msi", "dmg"],
      "identifier": "com.sentiric.traffic-cache",
      "publisher": "Sentiric",
      "copyright": "Copyright Â© 2025 Azmi SAHIN",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "DeveloperTool",
      "shortDescription": "An intelligent, universal caching layer for developers and power-users.",
      "longDescription": "Sentiric Traffic Cache is an invisible network assistant designed to speed up development workflows and simplify network management. It acts as a smart proxy, caching network requests to save time and bandwidth, providing real-time insights into your network traffic.",
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0 | libwebkit2gtk-4.0-37",
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "libsoup2.4-1"
        ],
        "files": {
          "/usr/share/applications/com.sentiric.traffic-cache.desktop": "assets/com.sentiric.traffic-cache.desktop"
        }
      },
      "macOS": {
        "frameworks": [],
        "exceptionDomain": ""
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 720,
        "resizable": true,
        "title": "Sentiric Traffic Cache",
        "width": 1280
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}